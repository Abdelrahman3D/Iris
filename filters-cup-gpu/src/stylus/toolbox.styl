.toolbox
    height: 100vh
    width: 200px
    background-color: $gray
    float: left
    padding: 20px 5px
    display: flex
    flex-direction: column

    &-label
        display: block
        color: $white
        font-size: 15px
        margin: 10px 0

    select
        -webkit-appearance: none
        appearance: none
        width: 100%
        padding: 10px 20px
        border-radius: 6px
        margin: 2px 0
        border: 0
        background-color: $white
        color: $dark
        &::placeholder
            color: red
