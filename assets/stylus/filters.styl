.toolbox
  padding: 50px 20px
  width: 300px
  height: 100vh
  background-color: $blue

.artboard
  display: flex
  width: 90%
  margin: auto
  box-shadow: 0 1px 20px alpha($dark, 0.1)
  &-wrapper
    flex: 1

.app
  display: flex
  justify-content: center
  align-items: center

.filters
  display: flex
  justify-content: space-between
  align-items: center
  flex-wrap: wrap
  width: 100%
  &-item
    display: flex
    justify-content: center
    align-items: center
    background-color: $white
    color: $dark
    margin: 5px 0
    padding: 25px 0
    width: calc(50% - 5px)
    flex-shrink: 0
    flex-grow: 0
    border: 1px solid $white
    border-radius: 2px

.matrix
  display: flex
  justify-content: space-between
  flex-wrap: wrap
  width: 100%
  input
    width: calc(33.33% - 5px)
    flex-shrink: 0
    margin: 5px 0
    border: 0
    border: 2px solid $gray
    line-height: 2em
    font-size: 15px
    text-align: center
    -webkit-appearance: none
    -moz-appearance: textfield
    border-radius: 6px
    &:focus
      outline: none
  &-button
    width: 100%
    background-color: $white
    border: 0
    margin: 5px 0
    padding: 10px 20px
    border-radius: 6px
    font-size: 15px
    color: $dark
    box-shadow: inset 0 -3px 0 alpha($dark, 0.2)
    cursor: pointer
    transition: 0.4s
    &:hover
      box-shadow: inset 0 -3px 0 alpha($dark, 0.2), 0 6px 8px -2px alpha($dark, 0.2)
    &:focus
      box-shadow: inset 0 3px 0 alpha($dark, 0.2)
      outline: none

[type="number"]::-webkit-inner-spin-button,
[type="number"]::-webkit-outer-spin-button
  display: none

.select
  -webkit-appearance: none
  -moz-appearance: none
  display: block
  padding: 10px
  border-radius: 40px
  font-size: 16px
  line-height: 1em
  border-width: 1px
  border-style: solid
  border-color: $gray
  color: $dark
  margin: 0 0 15px 0
  width: 100%
